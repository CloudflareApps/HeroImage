{
  "resources": {
    "head": [
      {
        "src": "app.css",
        "type": "style"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["*"],
        "execute": "INSTALL_SCOPE.setOptions(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "backgroundImage": {
        "description": "This image will resize to fit the screen.",
        "title": "Background image",
        "order": 0,
        "type": "string",
        "format": "image"
      },

      "message": {
        "default": "# First impressions in full screen.\nA summary of your content to encourage visitors to read on.",
        "description": "A summary of your content formatted with <a target='_blank' href='https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet'>Markdown</a>.",
        "placeholder": "Your hero Image",
        "title": "Message",
        "order": 1,
        "type": "object",
        "format": "markdown"
      },

      "textColor": {
        "default": "#ffffff",
        "title": "Text color",
        "order": 3,
        "type": "string",
        "format": "color"
      },

      "textShadowColor": {
        "default": "#333333",
        "title": "Text shadow color",
        "order": 4,
        "type": "string",
        "format": "color"
      },

      "alignment": {
        "title": "Text alignment",
        "type": "string",
        "order": 5,
        "default": "left",
        "enum": [
          "left",
          "center",
          "right"
        ],
        "enumNames": {
          "left": "Left",
          "center": "Center",
          "right": "Right"
        }
      },

      "showAdvanced": {
        "title": "Show advanced options",
        "order": 6,
        "type": "boolean"
      },

      "location": {
        "showIf": "showAdvanced",
        "title": "Hero Image location",
        "description": "Where should the Hero Image appear on the page?",
        "order": 7,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      }
    }
  }
}

