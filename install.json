{
  "resources": {
    "head": [
      {
        "src": "app.css",
        "type": "style"
      },
      {
        "type": "script",
        "src": "./build/app.js"
      }
    ],
    "body": [
    ]
  },
  "preview": {
    "handlers": [
      {
        "options": ["textColor", "textShadowColor", "alignment", "message"],
        "execute": "INSTALL_SCOPE.updateInnerContent(INSTALL_OPTIONS)"
      },
      {
        "options": ["backgroundImage"],
        "execute": "INSTALL_SCOPE.updateBackground(INSTALL_OPTIONS)"
      },
      {
        "options": ["location"],
        "execute": "INSTALL_SCOPE.updateElement(INSTALL_OPTIONS)"
      }
    ]
  },
  "options": {
    "properties": {
      "backgroundImage": {
        "default": "https://eager-app-images.imgix.net/lturyv6bQ0KLnXdnNLCi_life.jpg",
        "description": "This image will resize to fit the screen.",
        "title": "Background image",
        "order": 0,
        "type": "string",
        "format": "image"
      },

      "message": {
        "default": "# First impressions in full screen.\nA summary of your content to encourage visitors to read on.",
        "description": "A summary of your content formatted with <a target='_blank' href='https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet'>Markdown</a>.",
        "placeholder": "Your hero summary...",
        "title": "Message",
        "order": 1,
        "type": "object",
        "format": "markdown"
      },

      "textColor": {
        "default": "#ffffff",
        "title": "Text color",
        "order": 3,
        "type": "string",
        "format": "color",
        "placeholder": "#..."
      },

      "textShadowColor": {
        "enum": [
          "dark",
          "light",
          "none"
        ],
        "enumNames": {
          "dark": "Dark",
          "light": "Light",
          "none": "None"
        },
        "default": "dark",
        "title": "Text shadow color",
        "order": 4,
        "type": "string"
      },

      "alignment": {
        "title": "Text alignment",
        "type": "string",
        "order": 5,
        "default": "left",
        "enum": [
          "left",
          "center",
          "right"
        ],
        "enumNames": {
          "left": "Left",
          "center": "Center",
          "right": "Right"
        }
      },

      "showAdvanced": {
        "title": "Show advanced options",
        "order": 6,
        "type": "boolean"
      },

      "location": {
        "showIf": "showAdvanced",
        "title": "Hero Image parent element",
        "description": "The element containing the Hero Image.",
        "order": 7,
        "type": "object",
        "format": "element",
        "default": {
          "selector": "body",
          "method": "prepend"
        }
      }
    }
  }
}

